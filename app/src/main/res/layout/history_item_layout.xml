<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_btn_bg"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginHorizontal="10dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_card_img"
        android:layout_width="@dimen/_40sdp"
           android:layout_height="@dimen/_50sdp"
        android:src="@drawable/ic_card_img"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Number : "
        android:textColor="@color/white"
        android:fontFamily="@font/opensans_regular"
        android:textSize="17dp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/card_type1"
        app:layout_constraintStart_toEndOf="@id/iv_card_img"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sjfh sdjf dhjd jddf"
        android:textColor="@color/white"
        android:ellipsize="marquee"
        android:gravity="start"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@id/iv_delete"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintStart_toEndOf="@id/name1"
        app:layout_constraintTop_toTopOf="@id/name1"
        app:layout_constraintBottom_toBottomOf="@id/name1"
        android:fontFamily="@font/opensans_regular"
        android:textSize="@dimen/_13ssp"
        android:singleLine="true" />


    <TextView
        android:id="@+id/card_type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="Card Type : "
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/name1"
        app:layout_constraintTop_toBottomOf="@id/name1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/card_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sajbjskf"
        android:ellipsize="marquee"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@id/iv_delete"
        android:gravity="start"
        android:layout_marginEnd="@dimen/_5sdp"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintTop_toTopOf="@id/card_type1"
        app:layout_constraintBottom_toBottomOf="@id/card_type1"
        app:layout_constraintStart_toEndOf="@id/card_type1"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/white"
        android:textSize="14dp" />


    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/wrong_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
